---
const { title = "My Store" } = Astro.props;
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>

  <body class="text-gray-800">

    <!-- TOP MARQUEE -->
    <div class="overflow-hidden whitespace-nowrap border-b border-black bg-yellow-300 py-2">
      <div class="animate-marquee inline-block">
        FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • 
      </div>
      <div class="animate-marquee inline-block" aria-hidden="true">
        FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • 
      </div>
    </div>

    <!-- HEADER -->
	<header class="bg-white shadow p-4 border-b border-black">
		<div class="max-w-6xl mx-auto flex flex-col md:flex-row md:justify-between md:items-center">
			<!-- Title -->
			<h1 id="title" class="text-5xl md:text-6xl font-bold mb-4 md:mb-0 text-center md:text-left text-black">
			FENIX Clothing
			</h1>

			<!-- Nav -->
			<nav class="flex justify-center md:justify-end items-center gap-4">
			<a href="/"
				class="px-5 py-2 border border-transparent hover:border-black hover:bg-yellow-300 hover:scale-105 transition transform duration-200">
				Home
			</a>
			<a href="/about"
				class="px-5 py-2 border border-transparent hover:border-black hover:bg-yellow-300 hover:scale-105 transition transform duration-200">
				About
			</a>
			<a href="/contact"
				class="px-5 py-2 border border-transparent hover:border-black hover:bg-yellow-300 hover:scale-105 transition transform duration-200">
				Contact
			</a>
			</nav>
		</div>
	</header>


    <!-- MAIN CONTENT -->
    <main class="max-w-6xl mx-auto px-4 py-6">
      <slot />
    </main>

    <!-- BOTTOM MARQUEE -->
    <div class="overflow-hidden whitespace-nowrap border-t border-black bg-yellow-300 py-2 mt-12">
      <div class="animate-marquee inline-block">
        FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • 
      </div>
      <div class="animate-marquee inline-block" aria-hidden="true">
        FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • FENIX CLOTHING • 
      </div>
    </div>

    <!-- FOOTER -->
    <footer class="bg-white shadow p-4 text-center text-gray-600 border-t border-black">
      © {new Date().getFullYear()} FENIX Clothing. All rights reserved.
    </footer>

  </body>
</html>
