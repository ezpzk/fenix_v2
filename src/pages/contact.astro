---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Contact | FENIX Store">
  <div class="max-w-xl mx-auto pt-16 px-4 text-center">
    <h1 class="text-4xl font-bold mb-6">Contact Us</h1>
    <p class="text-gray-700 mb-8">
      Have questions or want to place an order? Reach out to us via the form below or on WhatsApp!
    </p>

    <!-- Dummy Contact Form -->
    <form class="flex flex-col space-y-4">
      <input
        type="text"
        placeholder="Your Name"
        class="border border-black px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-300"
      />
      <input
        type="email"
        placeholder="Your Email"
        class="border border-black px-4 py-2 focus:outline-none focus:ring-2 focus:rring-yellow-300"
      />
      <textarea
        placeholder="Your Message"
        rows="5"
        class="border border-black px-4 py-2 focus:outline-none focus:ring-2 focus:rring-yellow-300"
      ></textarea>
      <button
        type="submit"
        class=" bg-black text-white px-4 py-2 hover:bg-yellow-300 hover:text-black transition border border-black"
      >
        Send Message
      </button>
    </form>

    <p class="text-gray-500 mt-6">
      Or contact us directly on WhatsApp: 
      <a href="https://wa.me/94761146997" class="text-lime-600 hover:underline" target="_blank">
        +94 728196997
      </a>
    </p>
  </div>
</Layout>